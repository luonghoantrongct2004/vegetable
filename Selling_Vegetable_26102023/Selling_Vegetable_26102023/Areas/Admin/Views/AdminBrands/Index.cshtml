@model IEnumerable<Selling_Vegetable_26102023.Models.Brand>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="jumbotron text-center">Brand</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class=" container-fluid pt-3">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BrandId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BrandId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BrandId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
